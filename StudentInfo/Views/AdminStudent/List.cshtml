@model List<StudentInfo.Models.Domain.Student>

@{
}
<div class="bg-secondary
 bg-opacity-10 py-2">
	<div class="container">
		<h1>Show All Students</h1>
	</div>
	<div class="container py-5">
		@if(Model != null && Model.Any())
		{
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Department</th>
						<th>Session</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<tr>
					</tr>
				</tbody>
				@foreach (var student in Model)
				{
					<tr>
						<td>@student.Id</td>
						<td>@student.Name</td>
						<td>@student.Department</td>
						<td>@student.Session</td>
						<td><a asp-controller="AdminStudent" asp-action="Edit"asp-route-id="@student.Id" >Edit </a></td>
					</tr>
				}
			</table>
		}
		else
		{
			<p>No Student Found</p>
		}

	</div>
	</div>